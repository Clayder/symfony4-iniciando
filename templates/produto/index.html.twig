{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <h1>Listando produtos</h1>
    <hr>
    <div class="row">
        <div class="col-md-12">
            <a href="" class="btn btn-primary btn-lg pull-right">
                Adicionar Produto
            </a>
        </div>
    </div>
    <table class="table table-striped table-hover mt-3">
        <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Preço</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
            {% for produto in produtos %}
                <tr>
                    <td>{{ produto.id }}</td>
                    <td>{{ produto.nome }}</td>
                    <td>{{ produto.preco }}</td>
                    <td>
                        <a href="" class="btn btn-sm btn-warning"><i class="fa fa-eye"></i></a>
                        <a href="" class="btn btn-sm btn-success"><i class="fa fa-pencil-alt"></i></a>
                        <a href="" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
